<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>                         <!-- method-override package is needed -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <!-- "?_method=PUT" is put at end of action url and  method="POST". this tells html to do a put request-->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"> <!-- value attr prefills the form-->
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>"> <!-- value attr prefills the form-->
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"><%= blog.body %></textarea> <!--  prefills the form with blog.body-->
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

